generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DEV_DOCKER_DATABASE")
  shadowDatabaseUrl = env("DEV_DOCKER_SHADOW_DATABASE")
}

model User {
  id        String     @id @default(cuid())
  email     String     @unique
  password  String
  name      String
  role      Role       @default(USER)
}

enum Role {
  USER
  ADMIN
}

model Product {
  id          String      @id @default(cuid())
  name        String
  description String
  price       Float
  stock       Int
  imageUrl    String
}